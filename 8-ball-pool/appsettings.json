{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=poolapp;Username=pooluser;Password=poolpass"
  },
  "AWS": {
    "Region": "us-east-1",
    "Profile": "default",
    "S3": {
      "BucketName": "${AWS_BUCKET_NAME}",
      "ProfilePicturePath": "players/{0}/profile",
      "PresignedUrlExpirationMinutes": 15,
      "AllowedImageTypes": ["image/jpeg", "image/png"],
      "MaxFileSizeMB": 5
    }
  }
}
